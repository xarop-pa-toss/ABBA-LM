{
  "$jsonSchema": {
    "bsonType": "object",
    "description": "Schema for the Team collection.",
    "required": [
      "_id",
      "user_id",
      "team_code",
      "players",
      "name"
    ],
    "properties": {
      "_id": {
        "bsonType": "objectId",
        "description": "Unique identifier for the team."
      },
      "user_id": {
        "bsonType": "objectId",
        "description": "Reference to the user owning the team."
      },
      "team_code": {
        "bsonType": "string",
        "description": "Code representing the team type."
      },
      "players": {
        "bsonType": "array",
        "description": "List of players in the team.",
        "items": {
          "bsonType": "object",
          "required": [
            "player_id",
            "list_position"
          ],
          "properties": {
            "player_id": {
              "bsonType": "objectId",
              "description": "Reference to the player in the team."
            },
            "list_position": {
              "bsonType": "int",
              "description": "Position of the player in the team's list."
            }
          }
        }
      },
      "name": {
        "bsonType": "string",
        "description": "Name of the team."
      }
    }
  }
}
